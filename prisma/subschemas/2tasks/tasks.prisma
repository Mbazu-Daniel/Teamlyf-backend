}

enum ProjectAction {
  CREATED_PROJECTS
  UPDATED_PROJECTS
  DELETED_PROJECTS
  PROJECTS_COLLABORATOR_ADDED
  PROJECTS_COLLABORATOR_REMOVED
}

enum ProjectRole {
  LEAD
  GUEST
  MEMBER
  ADMIN
}
