  spaces        Space[]
  tasks         Task[]
  leaves        Leave[]
  leaveTypes    LeaveType[]
  leaveComments LeaveComment[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  Group         Group[]

  @@index([userId])
  @@index([name])
}

model Invite {
